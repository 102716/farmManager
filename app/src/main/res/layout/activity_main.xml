<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:paddingHorizontal="30dp"
        tools:context=".MainActivity">

<!--    <TextView-->
<!--            android:layout_width="50dp"-->
<!--            android:layout_height="50dp" android:id="@+id/textView2" tools:layout_editor_absoluteY="34dp"-->
<!--            tools:layout_editor_absoluteX="157dp" android:background="@drawable/coin"-->
<!--            tools:ignore="MissingConstraints"/>-->

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="farmManager"
            android:textColor="@android:color/holo_green_dark"
            android:gravity="center"
            android:textSize="30dp"
    />


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:maxWidth="0.5dp"
            android:maxHeight="0.5dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="40dp"
    />
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

        <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:hint="Enter Email"
                android:paddingVertical="15dp"
                android:textColor="#000000"
                android:inputType="textEmailAddress"
                android:paddingLeft="60dp"
        />


<!--        <ImageView-->
<!--                android:layout_width="35dp"-->
<!--                android:layout_height="35dp"-->
<!--                android:layout_alignParentLeft="true"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:background="@drawable/ic_email"/>-->
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

        <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:paddingLeft="60dp"
                android:hint="Enter Full name"/>
<!--        <ImageView-->
<!--                android:layout_width="45dp"-->
<!--                android:layout_height="45dp"-->
<!--                android:layout_alignParentLeft="true"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:background="@drawable/ic_person"-->
<!--                android:layout_marginLeft="10dp"/>-->


    </RelativeLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Phone Number"
                android:paddingLeft="60dp"
                android:paddingVertical="15dp"
                android:id="@+id/number"
                android:inputType="phone"/>


    </RelativeLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

        <EditText
                android:id="@+id/password1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter Password"
                android:paddingVertical="15dp"
                android:textColor="#000000"
                android:inputType="textPassword"
                android:paddingLeft="60dp"

        />


    </RelativeLayout>

    <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="6dp"
            android:textSize="25dp"
            android:textAllCaps="false"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You have account?"
                android:layout_marginTop="0dp"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="20dp"/>
        <TextView
                android:id="@+id/signinTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textColor="@android:color/holo_green_dark"/>


    </LinearLayout>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/progressBar"/>

</androidx.appcompat.widget.LinearLayoutCompat>